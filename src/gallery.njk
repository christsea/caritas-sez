---
layout: layouts/base.njk
title: "Galleries"
permalink: "/galleries/"
---

<section class="galleries py-5">
  <div class="container text-center">
    <h1 class="mb-4">Photo Galleries</h1>
    {% if collections.galleries and collections.galleries | length %}
      <div class="row g-3">
        {% for gallery in collections.galleries %}
          <div class="col-md-4">
            <div class="card h-100">
              {% if gallery.data.thumbnail %}
                <img src="{{ gallery.data.thumbnail }}" class="card-img-top" alt="{{ gallery.data.title }}">
              {% else %}
                <div class="card-img-top bg-secondary text-white p-3">No Thumbnail</div>
              {% endif %}
              <div class="card-body text-center">
                <h5 class="card-title">{{ gallery.data.title | default("Untitled Gallery") }}</h5>
                <a href="{{ gallery.url }}" class="btn btn-outline-primary mt-2">View Gallery</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No galleries available at this time.</p>
    {% endif %}
  </div>
</section>
