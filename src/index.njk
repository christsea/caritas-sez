<!-- Latest News -->

{% set _allBlogPosts = collections.blog %}
{% set latestPosts = _allBlogPosts.slice(0, 3) %}

<section class="news" style="padding: 2em; text-align: center;">
  <h2>Latest News</h2>
  {% if latestPosts | length %}
    <!-- Use the class news-cards on the container -->
    <div class="news-cards">
      {% for post in latestPosts %}
        <!-- Use class news-card on individual items -->
        <div class="news-card">
          <h3>
            <a href="{{ post.url }}" style="color: #800000; text-decoration: none; font-weight: bold;">
              {{ post.data.title | default("Untitled Post") }}
            </a>
          </h3>
          <p style="color: #666; font-size: 0.9em; margin: 0 0 0.5em;">
            {{ post.date | date("LLL dd, yyyy") }}
          </p>
          <p style="margin: 0 0 0.5em;">
            {{ post.data.excerpt | default(post.templateContent | safe | slice(0,150) ~ '...') }}
          </p>
          <a href="{{ post.url }}" class="btn" style="display: inline-block; margin-top: 0.5em;">Read More</a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No blog posts found.</p>
  {% endif %}
</section>


