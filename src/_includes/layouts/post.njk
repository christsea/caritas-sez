---
layout: layouts/base.njk
---

<article class="container py-5">
  <header class="mb-4 text-center">
    <h1 class="display-4">{{ title }}</h1>
    <p class="text-muted small">
      {{ date | readableDate }}
      {% if categories %}
        &nbsp;â€¢&nbsp;
        {% for c in categories %}
          <a href="/categories/{{ c | slug }}/" class="text-decoration-none">{{ c | replace("-"," ") | title }}</a>{% if not loop.last %}, {% endif %}
        {% endfor %}
      {% endif %}
    </p>
  </header>

  {% if image %}
  <figure class="text-center mb-4">
    <img src="{{ image }}" alt="{{ title }}" class="img-fluid rounded">
    {% if description %}
      <figcaption class="text-muted small mt-2">{{ description }}</figcaption>
    {% endif %}
  </figure>
  {% endif %}

  <div class="prose mx-auto my-4">
    {{ content | safe }}
  </div>

  {% if tags %}
  <footer class="mt-5 text-center">
    <p class="small mb-0"><strong>Tags:</strong>
      {% for t in tags %}
        <a href="/tags/{{ t | slug }}/" class="badge bg-secondary text-decoration-none me-1">{{ t }}</a>
      {% endfor %}
    </p>
  </footer>
  {% endif %}
</article>
