---
layout: layouts/base.njk
---
<article class="container py-5">
  <header class="mb-4">
    <h1>{{ title }}</h1>
    <p class="text-muted">
      {{ date | readableDate }}
      {% if location %} Â· {{ location }}{% endif %}
    </p>
  </header>

  {% if image %}
    <figure class="post-hero mb-5 overflow-hidden rounded">
      <img
        src="{{ image }}"
        alt="{{ title }}"
        class="post-hero-img w-100 h-100"
        loading="lazy"
      >
      {% if description %}
        <figcaption class="mt-2 text-muted small">
          {{ description }}
        </figcaption>
      {% endif %}
    </figure>
  {% endif %}

  <section class="event-body">
    {{ content | safe }}
  </section>
</article>
