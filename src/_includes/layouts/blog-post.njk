---
<article class="container py-5">
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date }}">{{ date | readableDate }}</time>
  </header>
  {% if image %}
    <img src="{{ image }}" alt="{{ title }}" class="img-fluid my-4">
  {% endif %}
  <section class="post-body">
    {{ content | safe }}
  </section>
</article>
