{% extends "layouts/base.njk" %}

{% block content %}

  {# 2. Hero banner #}
  <section class="post-hero mb-4"
    style="background-image: url('{{ '/images/' | url }}{{ image }}');
          height: 40vh; min-height: 30vh; max-height: 45vh;
          background-size: cover; background-position: center;"
    aria-label="Post hero">
  </section>

  {# 3. Your post content #}
  <article class="post-content container py-4">
    <header class="mb-4">
      <h1>{{ page.data.title }}</h1>
      <p class="text-muted small">
        {{ page.date | readableDate }}
        {% if page.data.categories %}
          Â· <a href="/categories/{{ page.data.categories[0] }}/" class="text-decoration-none">
              {{ page.data.categories[0] | replace('-', ' ') }}
            </a>
        {% endif %}
      </p>
    </header>

    {{ content | safe }}
  </article>
{% endblock %}
