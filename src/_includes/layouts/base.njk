<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
 {# Include dynamic SEO meta tags, Open Graph, Twitter Card, JSONâ€‘LD #}
  {% include "partials/seo.njk" %}
  
  <!-- Bootstrap 5 CSS (no integrity to avoid mismatch errors) -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    crossorigin="anonymous">
    <!-- LightGallery CSS (free build) -->
<!--<link
  rel="stylesheet"
  href="https://unpkg.com/lightgallery@2.1.8/css/lightgallery.min.css"
/>-->

  <!-- Custom CSS (overrides or additional styling) -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  {% include "partials/header.njk" %}

  <!-- Breadcrumbs -->
  <nav aria-label="breadcrumb" class="my-2">
    {% set crumbs = page.url | breadcrumbs %}
    {% if crumbs and crumbs.length > 0 %}
      <div class="container">
        <ol class="breadcrumb">
          {% for crumb in crumbs %}
            {% if loop.last %}
              <li class="breadcrumb-item active" aria-current="page">{{ crumb.name }}</li>
            {% else %}
              <li class="breadcrumb-item">
                <a href="{{ crumb.url }}">{{ crumb.name }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
    {% endif %}
  </nav>

  <!-- Main Content -->
  <main class="container my-4">
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

  <!-- Bootstrap 5 JS Bundle (no integrity) -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    crossorigin="anonymous">
  </script>

  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>
</html>
