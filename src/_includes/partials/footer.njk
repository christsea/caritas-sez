<footer class="bg-burgundy text-light py-4">
  <div class="container">
    <div class="row">
      <!-- About Section -->
      <div class="col-md-4 mb-3">
        <h5 class="text-white">About</h5>  <!-- Explicit white text -->
        <ul class="list-unstyled">
          <li><a href="/about/" class="text-gold text-decoration-none hover:text-white">Our Mission</a></li>
          <li><a href="/blog/" class="text-gold text-decoration-none hover:text-white">Blog</a></li>
        </ul>
      </div>
      
      <!-- Contact Section -->
      <div class="col-md-4 mb-3">
        <h5 class="text-white">Contact</h5>
        <ul class="list-unstyled">
          <li><a href="/contact/" class="text-gold text-decoration-none hover:text-white">Contact Us</a></li>
          <li><a href="mailto:caritas@seychelles.net" class="text-gold text-decoration-none hover:text-white">caritas@seychelles.net</a></li>
        </ul>
      </div>
      
      <!-- Address Section -->
      <div class="col-md-4 mb-3">
        <h5 class="text-white">Address</h5>
        <address class="text-gold mb-0">  <!-- Gold text for address -->
          {% if site.address %}
            {{ site.address.description }}, <br/> {{ site.address.street }}, <br/> {{ site.address.city }}
          {% else %}
            Caritas House, 123 Charity Road, Victoria, Seychelles  <!-- Fallback -->
          {% endif %}
        </address>
      </div>
    </div>
    
    <div class="text-center mt-3">
      <p class="text-white mb-0">&copy; {{ now | date("yyyy") }} {{ site.title }}. All rights reserved.</p>
    </div>
  </div>
</footer>