{# 
  collection-card.njk  
  Expects `item` in context with:
    - item.url  
    - item.data.title  
    - item.data.image (optional)  
    - item.data.date  
    - item.templateContent  
#}
<div class="collection-card card h-100">
  {% if item.data.image %}
    <a href="{{ item.url }}">
      <img 
        src="{{ item.data.image }}" 
        class="card-img-top" 
        alt="{{ item.data.title }}" 
        loading="lazy"
      >
    </a>
  {% endif %}
  <div class="card-body d-flex flex-column">
    <h5 class="card-title mb-1">
      <a href="{{ item.url }}" class="text-decoration-none text-dark">
        {{ item.data.title }}
      </a>
    </h5>
    <time class="text-muted small mb-2">{{ item.date | readableDate }}</time>
    <p class="card-text flex-grow-1">
      {{ item.templateContent | striptags | truncate(100) }}
    </p>
  </div>
  <div class="card-footer bg-transparent text-center">
    <a href="{{ item.url }}" class="btn btn-sm btn-primary">Read More</a>
  </div>
</div>
