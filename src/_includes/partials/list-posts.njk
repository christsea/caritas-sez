{# src/_includes/partials/list-posts.njk #}
<div class="row g-4">
  {% for post in allNewsletters %}
    <div class="col-md-4">
      <div class="card h-100">
        {% if post.data.image %}
          <img src="{{ post.data.image }}" class="card-img-top" alt="{{ post.data.title }}">
        {% endif %}
        <div class="card-body">
          <h5><a href="{{ post.url }}">{{ post.data.title }}</a></h5>
          <small class="text-muted">{{ post.date | readableDate }}</small>
          <p>{{ post.templateContent | striptags | truncate(100) }}</p>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
